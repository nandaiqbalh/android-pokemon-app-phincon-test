<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:color="@color/primary_500" android:state_focused="true" />

    <!-- Hovered state -->
    <item android:color="@color/primary_500" android:state_hovered="true" />

    <!-- Disabled state -->
    <item android:color="@color/neutral_200" android:state_enabled="false" />

    <!-- Default state (unfocused) -->
    <item android:color="@color/primary_200" />
</selector>